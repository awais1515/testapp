<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    tools:context=".CloseActivity">


    <Button
        android:id="@+id/btn_Close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Close Activity"
        android:textSize="16sp" />

    <RadioGroup
        android:id="@+id/radioG1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step"
            android:textSize="20sp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="150dp"
            android:checked="true"
            />

        <RadioButton
            android:id="@+id/radio_Extension"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/radio_step"
            android:layout_marginLeft="150dp"
            android:layout_centerInParent="true"
            android:text="Extension"
            android:textSize="20sp" />


    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/radioG1"
        android:orientation="horizontal"/>


    <TextView
        android:id="@+id/tv_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radioG1"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:text="Height"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/et_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_height"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_alignBaseline="@id/tv_height"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:background="@color/white">

    </com.google.android.material.bottomnavigation.BottomNavigationView>


</RelativeLayout>